<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#ff5d49ff</item>
        <item name="colorPrimaryDark">#ff2328ff</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="PPBaseTheme" parent="AppTheme.Base">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="CameraButtonStyle">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:contentDescription">@string/imageview_capture_photo_content_description</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>

</resources>